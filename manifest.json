{
	"manifest_version": 3,
	"name": "AI Controls",
	"version": "1.0",
	"description": "Extra controls for AI chat interfaces like ChatGPT and Gemini.",
	"icons": {
		"48": "icons/extension_ico_48.png",
		"72": "icons/extension_ico_72.png",
		"96": "icons/extension_ico_96.png",
		"128": "icons/extension_ico_128.png"
	},
	"permissions": [
		"scripting"
	],
	"host_permissions": [
		"https://chatgpt.com/*",
		"https://gemini.google.com/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://chatgpt.com/*"
			],
			"js": [
				"src/openai.js"
			],
			"run_at": "document_idle"
		},
		{
			"matches": [
				"https://gemini.google.com/*"
			],
			"js": [
				"src/gemini.js"
			],
			"run_at": "document_idle"
		}
	]
}
